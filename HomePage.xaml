<Window x:Class="ApplicationRestaurant.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationRestaurant"
        mc:Ignorable="d"
        Title="HomePage" Height="550" Width="800">

    <Grid Background="#bfd7ea">

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="300*" />
            <ColumnDefinition Width="500*"/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>

            <RowDefinition Height="110*" />
            <RowDefinition Height="110*" />
            <RowDefinition Height="110*" />
            <RowDefinition Height="110*" />
            <RowDefinition Height="110*" />

        </Grid.RowDefinitions>

        <Button Background="#eee0cb" Click="click_sniadanie" Grid.Column="0" Grid.Row="0" Content="Śniadanie">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="12"/>
                    <Setter Property="Margin" Value="10,10,10,10"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button Background="#eee0cb" Click="LunchAction" Grid.Column="0" Grid.Row="1" Content="Lunch">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="12"/>
                    <Setter Property="Margin" Value="10,10,10,10"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button Background="#eee0cb" Click="DrinkAction"  Grid.Column="0" Grid.Row="2" Content="Napoje">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="12"/>
                    <Setter Property="Margin" Value="10,10,10,10"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button Background="#eee0cb" Grid.Column="0" Grid.Row="3" Content="Rabaty">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="12"/>
                    <Setter Property="Margin" Value="10,10,10,10"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button Background="#eee0cb" Grid.Column="0" Grid.Row="4" Content="Podsumowanie">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="12"/>
                    <Setter Property="Margin" Value="10,10,10,10"/>
                </Style>
            </Button.Resources>
        </Button> 


        <Border Background="#839788" Grid.Column="1" Grid.Row="0" Grid.RowSpan="5">
        <Grid>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="166*"/>
                <ColumnDefinition Width="166*"/>
                <ColumnDefinition Width="166*"/>
            </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="150*"/>
                    <RowDefinition Height="150*"/>
                    <RowDefinition Height="150*"/>
                </Grid.RowDefinitions>

                <StackPanel x:Name="LunchPanel" Visibility="Hidden" Grid.Column="0" Grid.Row="0" >
                    <Button Content="Rzerzucha">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="12"/>
                                <Setter Property="Margin" Value="10,10,10,10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            
                <StackPanel x:Name="DrinkPanel" Visibility="Hidden" Grid.Column="3" Grid.Row="3" >
                <Button Content="Smoothie" />
                </StackPanel> 
            
        </Grid>
        </Border>
    </Grid>
</Window>
